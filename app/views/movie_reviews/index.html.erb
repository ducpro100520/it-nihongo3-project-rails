<p id="notice"><%= notice %></p>

<h1>映画のレビュー</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Movie</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movie_reviews.each do |movie_review| %>
      <tr>
        <td><%= movie_review.user_id %></td>
        <td><%= movie_review.movie_id %></td>
        <td><%= movie_review.review %></td>
        <td><%= link_to '見せる', movie_review, method: :get, class:"btn btn-success"  %></td>
        <td><%= link_to '修正', edit_movie_review_path(movie_review), method: :get, class:"btn btn-warning" %></td>
        <td><%= link_to '削除', movie_review, method: :delete, data: { confirm: 'Are you sure?', class: "btn btn-info" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しい映画のレビューの追', new_movie_review_path %>
