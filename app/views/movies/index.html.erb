<p id="notice"><%= notice %></p>

<h1>映画</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>インフォメーション</th>
      <th>長さ</th>
      <th>ディレクター</th>
      <th>アクター</th>
      <th>カテゴリー</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.description %></td>
        <td><%= movie.length %></td>
        <td><%= movie.directors %></td>
        <td><%= movie.actors %></td>
        <td><%= movie.category %></td>
        <td><%= link_to '見せる', movie, method: :get, class:"btn btn-success" %></td>
        <td><%= link_to '修正', edit_movie_path(movie), method: :get, class:"btn btn-warning" %></td>
        <td><%= link_to '削除', movie, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しい映画の追加', new_movie_path, method: :get, class:"btn btn-primary" %>
